{
    "manifest_version": 3,
    "name": "Flashcard Quick Creator", 
    "version": "0.1.0", 
    "description": "Quickly create flashcards by selecting text on web pages.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "storage",       
      "activeTab",     
      "scripting"      
    ],
    "host_permissions": [
      "<all_urls>"     
    ],
   
     "background": {
    "service_worker": "dist/background.js" 
  },
"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"], 
      "css": ["content.css"],
      "all_frames": true 
    }
  ],
    "action": {
      "default_popup": "popup.html", 
      "default_icon": {             
          "16": "icons/icon16.png",
          "48": "icons/icon48.png"
      }
    }
  }